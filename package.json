{
  "name": "crm_app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite --port 3000 dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "db:migrate": "prisma generate",
    "db:migrate:fresh": "npx prisma migrate dev --name init",
    "db:seed": "tsx prisma/seeds/seed.ts",
    "test": "tsx src/lib/mails/send_user_verification_link.ts",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "queue": "tsx --env-file=.env src/jobs/job-queue.ts"
  },
